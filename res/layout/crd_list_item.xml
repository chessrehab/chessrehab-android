<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivColor"
                android:layout_width="69dp"
                android:layout_height="76dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_kw0" />

            <TextView
                android:id="@+id/tvChallenger"
                android:layout_width="155dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="Opponnent"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ivColor"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Move"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvMoveLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Status"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                app:layout_constraintStart_toStartOf="@+id/tvChallenger"
                app:layout_constraintTop_toBottomOf="@+id/tvChallenger" />

            <TextView
                android:id="@+id/tvMoveLabel"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:elevation="23dp"
                android:gravity="right"
                android:shadowColor="@color/cornFlowerBlue"
                android:text="@string/crdMoveStringLabel"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toStartOf="@+id/tvMove"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_blank"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvChallenger" />

            <ImageView
                android:id="@+id/ivNewMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvChallenger"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_msg_orng" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>