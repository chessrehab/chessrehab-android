<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/goldenRod75"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvTitlePromo"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:shadowRadius="10"
        android:text="Select a piece to promote to:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQueenPromo"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePromo"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePromo"
        app:srcCompat="@drawable/ic_wifi_white" />

    <ImageView
        android:id="@+id/ivRookPromo"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivQueenPromo"
        app:layout_constraintStart_toEndOf="@+id/ivQueenPromo"
        app:layout_constraintTop_toTopOf="@+id/ivQueenPromo"
        app:srcCompat="@drawable/ic_wifi_white" />

    <ImageView
        android:id="@+id/ivBishopPromo"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRookPromo"
        app:layout_constraintStart_toEndOf="@+id/ivRookPromo"
        app:layout_constraintTop_toTopOf="@+id/ivRookPromo"
        app:srcCompat="@drawable/ic_wifi_white" />

    <ImageView
        android:id="@+id/ivKnightPromo"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBishopPromo"
        app:layout_constraintStart_toEndOf="@+id/ivBishopPromo"
        app:layout_constraintTop_toTopOf="@+id/ivBishopPromo"
        app:srcCompat="@drawable/ic_wifi_white" />

</android.support.constraint.ConstraintLayout>
